<Window x:Class="LibraryAppWPF.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="MessageTextBlock" FontSize="16" Margin="5" />
            <TextBox x:Name="ResponseTextBox" Margin="5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="OK" Width="75" Click="OkButton_Click" Margin="5" />
                <Button Content="Cancel" Width="75" Click="CancelButton_Click" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
